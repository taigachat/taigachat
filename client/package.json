{
    "name": "TaigaChat",
    "license": "AGPL-3.0",
    "description": "The Standard TaigaChat Client",
    "version": "0.3.63",
    "type": "module",
    "author": "AB",
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@sveltejs/vite-plugin-svelte": "^4.0.1",
        "@tsconfig/svelte": "^5.0.4",
        "@types/audioworklet": "^0.0.70",
        "dependency-cruiser": "^16.6.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.20.1",
        "eslint-plugin-svelte": "^2.46.1",
        "prettier": "^3.5.1",
        "prettier-plugin-svelte": "^3.3.3",
        "svelte": "^5.2.7",
        "svelte-check": "^4.1.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.24.0",
        "vite": "^5.4.11",
        "globals": "^15.15.0"
    },
    "scripts": {
        "clean": "rm --interactive=once --one-file-system -r Build",
        "format": "prettier --write .",
        "linecount": "grep -Rn \"\" Source | wc -l"
    },
    "dependencies": {
        "@peculiar/x509": "^1.9.3",
        "mediasoup-client": "^3.7.17",
        "tslib": "^2.8.1",
        "zod": "^3.11.6"
    },
    "build": {
        "directories": {
            "output": "Build/Packaged"
        },
        "files": [
            "Build/Web/*",
            "Build/Web/static/**",
            "Build/Web/assets/**",
            "Build/Web/out/**",
            "package.json",
            "index.js"
        ],
        "artifactName": "${name}-${arch}-${os}-${version}.${ext}",
        "mac": {
            "category": "public.app-category.social-networking"
        }
    }
}
